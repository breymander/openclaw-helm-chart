{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "OpenClaw Helm Chart Values",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository"
        },
        "tag": {
          "type": "string",
          "description": "Container image tag"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "description": "Image pull policy"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Create service account"
        },
        "name": {
          "type": "string",
          "description": "Service account name"
        }
      }
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of replicas"
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "description": "Service type"
        },
        "port": {
          "type": "integer",
          "description": "Service port"
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress"
        },
        "className": {
          "type": "string",
          "description": "Ingress class name"
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable persistent storage"
        },
        "storageClass": {
          "type": "string",
          "description": "Storage class name"
        },
        "size": {
          "type": "string",
          "pattern": "^[0-9]+[KMGTPE]i?$",
          "description": "Storage size"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadWriteMany", "ReadOnlyMany"],
          "description": "Access mode"
        }
      }
    },
    "env": {
      "type": "object",
      "properties": {
        "CLAUDE_MODEL": {
          "type": "string",
          "description": "Claude model to use"
        },
        "PORT": {
          "type": "string",
          "description": "Service port"
        },
        "HOST": {
          "type": "string",
          "description": "Bind host"
        },
        "LOG_LEVEL": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "description": "Logging level"
        },
        "DATA_DIR": {
          "type": "string",
          "description": "Data directory path"
        },
        "MEMORY_ENABLED": {
          "type": "string",
          "enum": ["true", "false"],
          "description": "Enable memory persistence"
        }
      }
    },
    "existingSecret": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of existing Kubernetes Secret"
        },
        "keys": {
          "type": "object",
          "description": "Map of environment variable names to secret keys (format: envVarName: secretKeyName)",
          "additionalProperties": {
            "type": "string",
            "description": "Secret key name"
          }
        }
      },
      "required": ["name"]
    },
    "command": {
      "type": "array",
      "description": "Container command (overrides image CMD). Default runs the gateway server.",
      "items": { "type": "string" }
    },
    "extraArgs": {
      "type": "array",
      "description": "Extra arguments appended to the container command",
      "items": { "type": "string" }
    },
    "gateway": {
      "type": "object",
      "description": "Gateway Control UI and built-in channels settings",
      "properties": {
        "controlUi": {
          "type": "object",
          "properties": {
            "allowInsecureAuth": {
              "type": "boolean",
              "description": "Allow token-in-URL auth for Control UI (e.g. ?token=...).",
              "default": true
            }
          }
        },
        "channels": {
          "type": "object",
          "description": "Built-in OpenClaw channels (WhatsApp, Telegram, Discord, Slack, etc.). Merged into gateway.channels in ~/.openclaw/openclaw.json.",
          "additionalProperties": true
        },
        "initImage": {
          "type": "string",
          "description": "Init container image; must have sh and jq (merge/create JSON). Default: pascaliske/alpine-curl-jq (jq pre-installed).",
          "default": "pascaliske/alpine-curl-jq"
        }
      }
    },
    "extraEnv": {
      "type": "array",
      "description": "Additional environment variables",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "valueFrom": {
            "type": "object"
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string"
            },
            "memory": {
              "type": "string"
            }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string"
            },
            "memory": {
              "type": "string"
            }
          }
        }
      }
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Create RBAC resources"
        }
      }
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable network policy"
        }
      }
    }
  }
}
